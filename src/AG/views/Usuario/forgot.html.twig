{% extends 'layout.html.twig' %}

{% block title %} AG || Esqueceu sua Senha? {% endblock %}

{% block content %}
    <header class="container">
        <h2>RECUPERE SUA SENHA</h2>
    </header>

    <section class="container">
        <form class="form-horizontal" method="POST" action="{{ path('forgot_password') }}">
            {% if error != 'default' %}
                <div class="form-group">
                    <div class="col-sm-4">
                        <span class="alert-danger">{{ error }}</span>
                    </div>
                </div>
            {% endif %}
            {% if warning != 'default' %}
                <div class="form-group">
                    <div class="col-sm-4">
                        <span class="alert-success">{{ warning }}</span>
                    </div>
                </div>
            {% endif %}
            <div class="form-group">
                <div class="col-sm-4">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" value="" required=""/>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" id="_method" name="_method" value="POST"/>
                <button type="submit" class="col-sm-4 btn btn-success">RECUPERAR SENHA</button>
            </div>
        </form>
    </section>
{% endblock %}

{% block form %}{% endblock %}

{% block classhome %}{% endblock %}
{% block classprodutos %}{% endblock %}
{% block classcategorias %}{% endblock %}
{% block classtags %}{% endblock %}