{% extends 'layout.html.twig' %}

{% block title %}AG || Cadastro de Tag {% endblock %}

{% block content %}
    <header class="container">
        <h1>Cadastro de Usu√°rio</h1>
    </header>

    <section class="container">
        <form class="form-horizontal" method="post" action="{{ path('register') }}">
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" required
                           value="{% if usuario.email == null %}{% else %}{{ usuario.email }}{% endif %}">
                    {% if errors.username != null %}
                        <span class="alert-danger col-md-12">{{ errors.email }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" required
                           value="{% if usuario.username == null %}{% else %}{{ usuario.username }}{% endif %}">
                    {% if errors.username != null %}
                        <span class="alert-danger col-md-12">{{ errors.username }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" required
                           value="{% if usuario.password == null %}{% else %}{{ usuario.password }}{% endif %}">
                    {% if errors.password != null %}
                        <span class="alert-danger col-md-12">{{ errors.password }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="role" class="col-sm-2 control-label">Role</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="role" name="role" required
                           value="{% if usuario.role == null %}{% else %}{{ usuario.role }}{% endif %}">
                    {% if errors.role != null %}
                        <span class="alert-danger col-md-12">{{ errors.role }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="hidden" id="_method" name="_method" value="POST"/>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </form>
    </section>
{% endblock %}

