{% extends 'layout.html.twig' %}

{% block title %}AG || Excluir Categoria{% endblock %}

{% block content %}
    <header class="container">
        <h1>Excluir Categoria</h1>
    </header>

    <section class="container">
        <form class="form-horizontal" method="post"
              action="{{ path('categoria-deletar', {'id': categoria.id}) }}">
            <input type="hidden" id="id" name="id" value="{{ categoria.id }}">
            <div class="form-group">
                <label for="nome" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nome" disabled="disabled" value="{{categoria.nome}}">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-check"></i> Confirmar</button>
                    <a href="{{ path('categorias') }}" class="btn btn-default">Cancelar</a>
                </div>
            </div>
        </form>
    </section>
{% endblock %}

